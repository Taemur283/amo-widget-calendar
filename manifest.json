{
  "widget": {
    "name": "widget.name",
    "description": "widget.description",
    "short_description": "widget.short_description",
    "version": "1.0.0",
    "interface_version": 2,
    "init_once": true,
    "locale": ["ru", "en"],
    "installation": true,
    "support": {
      "link": "https://spacebakery.ru/#about_us",
      "email": "info@spacebakery.ru"
    }
  },
  "locations": ["lcard-1", "ccard-1", "settings"],
  "settings": {
    "api_key": {
      "name": "widget.settings.api_key",
      "type": "text",
      "required": true
    },
    "account": {
      "name": "widget.settings.account",
      "type": "text",
      "required": true
    },
    "language": {
      "name": "widget.settings.language",
      "type": "selectable",
      "items": [
        {
          "value": "ru",
          "name": "widget.settings.language_ru"
        },
        {
          "value": "en",
          "name": "widget.settings.language_en"
        }
      ],
      "default": "ru"
    }
  }
}
