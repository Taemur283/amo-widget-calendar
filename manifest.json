{
  "widget": {
    "name": "widget.name",
    "description": "widget.description",
    "short_description": "widget.short_description",
    "version": "1.0.0",
    "interface_version": 2,
    "init_once": true,
    "locale": ["ru", "en"],
    "installation": true,
    "support": {
      "link": "https://spacebakery.ru/#about_us",
      "email": "info@spacebakery.ru"
    },
  "notifications": {
    "handler_type": "user_short_lived"
  },
  "permissions": {
    "notifications": ["user_short_lived"]
  }
    
  },
  "locations": ["lcard-1", "ccard-1", "settings"],
  "settings": {
    "api_key": {
      "name": {
        "ru": "API-ключ amoCRM",
        "en": "amoCRM API Key"
      },
      "type": "string",
      "required": true,
      "placeholder": {
        "ru": "Введите API-ключ",
        "en": "Enter API key"
      }
    },
    "account": {
      "name": {
        "ru": "Поддомен amoCRM",
        "en": "amoCRM subdomain"
      },
      "type": "string",
      "required": true,
      "placeholder": {
        "ru": "ваш-поддомен",
        "en": "your-subdomain"
      }
    },
    "language": {
      "name": {
        "ru": "Язык интерфейса",
        "en": "Interface language"
      },
      "type": "selectable",
      "items": [
        {
          "value": "ru",
          "name": {
            "ru": "Русский",
            "en": "Russian"
          }
        },
        {
          "value": "en",
          "name": {
            "ru": "Английский",
            "en": "English"
          }
        }
      ],
      "default": "ru"
    }
  }
}
